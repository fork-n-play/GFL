{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://rawgit.com/fork-n-play/GFL/master/core/json/core-schema.json",
  "type": "object",
  "title": "Setup",
  "description": "Core values for GFL",
  "properties": {
    "rolls": {
      "type": "array",
      "title": "Rolls",
      "description": "Base dice rolls",
      "format": "tabs",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "Roll",
        "headerTemplate": "{{self.title}}",
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "description": "Title of the roll",
            "minLength": 1
          },
          "dices": {
            "type": "integer",
            "title": "Dices",
            "description": "Number of dices in a roll",
            "minimum": 1,
            "default": 1
          },
          "sides": {
            "type": "array",
            "format": "tabs",
            "title": "Sides",
            "description": "Sides of each dice",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "object",
              "headerTemplate": "{{self.symbol}}",
              "properties": {
                "symbol": {
                  "type": "string",
                  "title": "Symbol",
                  "minLength": 1
                },
                "value": {
                  "type": "number",
                  "title": "Value"
                }
              },
              "required": [
                "symbol",
                "value"
              ]
            },
            "options": {
              "disable_array_reorder": true
            }
          }
        },
        "required": [
          "title",
          "dices",
          "sides"
        ]
      }
    },
    "gauges": {
      "type": "array",
      "title": "Gauges",
      "description": "Graduated value associated with a name",
      "format": "tabs",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "id": "gauge",
        "title": "Gauge",
        "headerTemplate": "{{self.title}}",
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "title": "Description"
          },
          "full_name": {
            "type": "string",
            "template": "{{title}} {{description}}",
            "watch": {
              "title": "gauge.title",
              "description": "gauge.description"
            },
            "options": {
              "hidden": true
            }
          }
        },
        "required": [
          "title",
          "description"
        ]
      },
      "options": {
        "disable_array_reorder": true
      }
    }
  },
  "required": [
    "rolls",
    "gauges"
  ]
}
